node {
   stage('Create Prod Image') {

    withCredentials([string(credentialsId: 'DISCORD_PROD_TOKEN', variable: 'TOKEN')]) {
        // Parse the GitHub webhook's payload
        sh label: '', script: """bash -c \'
          rm -fr wall_e || true;
          mkdir wall_e;
          cd wall_e;
          git init;
          git remote add origin https://github.com/CSSS/wall_e.git;
          git fetch --depth 1 origin;
          git checkout add_CI_for_regular_docker_pushes;
          ./CI/server_scripts/build_wall_e/create_prod_docker_image.sh;
          cd ../;
          rm -fr wall_e;
        \'"""
    }
   }
}
